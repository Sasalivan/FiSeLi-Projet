{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}

{% block stylesheets %}
    {# <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/style.css') }}"> #}
    <style>
        body {background-color: #E8E6E6}

        .card { width: 400px; background-color: #E49BB7; border: 10px; border-radius: 12px}
        .button {display: inline-block; }
        .btn1 {  background-color: black; border-radius: 12px;  border: 10px; color: white; padding: 10px 32px;    margin: 4px 2px; -webkit-transition-duration: 0.4s; /* Safari */ transition-duration: 0.4s; cursor: pointer; }
    </style>

{% endblock %}

<div class="container mt-5 mb-5 d-flex justify-content-center">
    <div class="card px-1 py-4">
        <div class="card-body">
            <h1 class="card-title mb-3">Inscrivez-vous ! â™¥</h1>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
					{{ form_start(registrationForm) }}
				{{ form_row(registrationForm.pseudo) }}
				{{ form_row(registrationForm.email) }}
				{{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
				{{ form_row(registrationForm.agreeTerms) }}

				<button type="submit" class="btn1">S'inscrire</button>
                <br>
                <a href="{{path('app_login')}}" > Deja inscrit ? Connectez-vous !</a>
			{{ form_end(registrationForm) }}
                     </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
