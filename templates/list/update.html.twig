{% extends 'base.html.twig' %}

{% block title %}Mettre à jour le statut d'une série{% endblock %}

{% block body %}
    <h1>Votre status pour  {{ status.serie.titre }}</h1>

    {% if form_errors(form) %}
        <div class="alert alert-danger">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    <form method="post">
        {{ form_start(form) }}

        <div class="form-group">
            {{ form_label(form.nomStatus) }}
            {{ form_widget(form.nomStatus, { 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group">
            {{ form_label(form.nbEpisodeUser) }}
            {{ form_widget(form.nbEpisodeUser, { 'attr': {'class': 'form-control'} }) }}
        </div>

        {{ form_widget(form._token) }}

        <button type="submit" class="btn btn-primary">Mettre à jour</button>

        {{ form_end(form) }}
{% endblock %}